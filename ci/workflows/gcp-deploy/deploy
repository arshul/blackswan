workflow "Run GCP" {
  resolves = "GCP Deploy"
}

action "GCP Authenticate" {
  uses = "actions/gcloud/auth@master"
  secrets = ["GCLOUD_AUTH"]
}

action "npm Install" {
  needs = "GCP Authenticate"
  uses = "actions/npm@master"
  args = "install"
}

action "Run Build" {
  needs = "npm Install"
  uses = "actions/npm@master"
  args = ["run", "build"]
}

action "GCP Deploy" {
  needs = "Run Build"
  uses = "actions/gcloud/cli@master"
  args = ["app", "deploy"]
}
