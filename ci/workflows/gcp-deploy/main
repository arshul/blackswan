workflow "Run GCP" {
  resolves = "GCP Deploy"
}

action "GCP Authenticate" {
  uses = "actions/gcloud/auth@master"
  secrets = ["GCLOUD_AUTH"]
}

action "clean node dependencies" {
  needs = "GCP Authenticate"
  uses = "docker://docker/compose:1.24.0"
  runs = ["rm", "-rf", "frontend/node_modules/"]
}

action "Run Build" {
  needs = "clean node dependencies"
  uses = "actions/npm@master"
  runs = ["sh", "-c", "cd frontend && npm install && npm build"]
}

action "GCP Deploy" {
  needs = "Run Build"
  uses = "actions/gcloud/cli@master"
  runs = ["sh", "-c", "cd backend && gcloud app deploy"]
}
